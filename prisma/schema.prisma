generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model SkillCategory {
  id     String  @id
  Skills Skill[]
}

model Skill {
  id         Int           @id @default(autoincrement())
  name       String        @unique
  icon       String
  category   SkillCategory @relation(fields: [categoryId], references: [id])
  categoryId String

  @@index([categoryId])
}

model CaseStudy {
  id      String @id @default(uuid())
  title   String
  slug    String
  content String @db.Text
}
